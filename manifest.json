{
  "manifest_version": 3,
  "name": "Wallabot Helper",
  "description": "Official Wallabot session capturer for Wallabot tool",
  "author": "FosanzDev", 
  "version": "0.2",
  "permissions": [
    "tabs",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.wallapop.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/ico128.png",
    "500": "images/ico.png"
  },
  "action": {
    "default_popup": "templates/notification.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["templates/notification.html", "templates/notWallapop.html", "templates/token_detected.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
